#include <Adafruit_SSD1306.h>
#include <splash.h>

#define SCREEN_WIDTH 128 // OLED display width, in pixels
#define SCREEN_HEIGHT 64 // OLED display height, in pixels

#define OLED_CS 10
#define OLED_DC 9
#define OLED_RESET 8

Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &SPI, OLED_DC, OLED_RESET, OLED_CS);

// Define the size and position of the chicken
const int CHICKEN_WIDTH = 28;
const int CHICKEN_HEIGHT = 30;
int chickenX = 0;
int chickenY = 0;
int chickenDX = 1;
int chickenDY = 1;

// Define the chicken bitmap
const unsigned char chickenBitmap[] PROGMEM = {

0x00, 0x00, 0x00, 0x00, 0x38, 0x00, 0x00, 0x00, 0x3c, 0x00, 0x00, 0x70, 0x7f, 0x00, 0x00, 0xf0, 
	0x5f, 0x80, 0x01, 0xf0, 0xff, 0x80, 0x07, 0xa0, 0xff, 0xc0, 0x0a, 0xe0, 0xbf, 0xc0, 0x1f, 0xa0, 
	0x2f, 0xc1, 0xff, 0xe0, 0x0f, 0xe7, 0xff, 0x40, 0x0f, 0xff, 0xff, 0xc0, 0x0f, 0xff, 0xff, 0xc0, 
	0x0f, 0xff, 0xff, 0xc0, 0x07, 0xff, 0xff, 0x80, 0x07, 0xfb, 0xdb, 0xc0, 0x07, 0xff, 0x7f, 0xc0, 
	0x03, 0xef, 0xf1, 0xc0, 0x03, 0xf3, 0xcf, 0xc0, 0x03, 0xfc, 0x3f, 0x80, 0x01, 0xff, 0xff, 0x00, 
	0x00, 0xff, 0xfe, 0x00, 0x00, 0x1f, 0xfc, 0x00, 0x00, 0x07, 0xfc, 0x00, 0x00, 0x07, 0xf8, 0x00, 
	0x00, 0x03, 0xf8, 0x00, 0x00, 0x01, 0xd8, 0x00, 0x00, 0x01, 0xb0, 0x00, 0x00, 0x03, 0x60, 0x00, 
	0x00, 0x05, 0xf0, 0x00, 0x00, 0x1f, 0x00, 0x00
};

void drawPechkaScreensaver() {
  // Clear the display buffer
  display.clearDisplay();

  // Draw "Pechka" text
  display.setTextSize(2); // Set text size to 2
  display.setTextColor(WHITE); // Set text color to white
  display.setCursor(10, 20); // Set cursor position
  display.print("Pechka"); // Print "Pechka" text

  // Draw "Screensaver" text
  display.setTextSize(1); // Set text size to 1
  display.setCursor(55, 35); // Set cursor position
  display.print("Screensaver"); // Print "Screensaver" text

  // Update the display
  display.display();
}

void setup() {
  // Initialize the OLED display
  if(!display.begin(SSD1306_SWITCHCAPVCC)) {
    Serial.println(F("SSD1306 allocation failed"));
    for(;;); // Don't proceed, loop forever
  }

  // Clear the display buffer
  display.clearDisplay();
  display.display();
}

void loop() {
  // Generate a random number between 20 and 40
  int mainScreenTime = random(2000, 4000);

  // Loop for the main screen time
  for (int i = 0; i < mainScreenTime; i++) {
    // Move the chicken
    chickenX += chickenDX;
    chickenY += chickenDY;

    // Check if the chicken has hit the edges of the screen
    if (chickenX <= 0 || chickenX + CHICKEN_WIDTH >= SCREEN_WIDTH) {
      chickenDX = -chickenDX; // Reverse the X direction
    }
    if (chickenY <= 0 || chickenY + CHICKEN_HEIGHT >= SCREEN_HEIGHT) {
      chickenDY = -chickenDY; // Reverse the Y direction
    }

    // Clear the display buffer
    display.clearDisplay();

    // Draw the chicken
    display.drawBitmap(chickenX, chickenY, chickenBitmap, CHICKEN_WIDTH, CHICKEN_HEIGHT, WHITE);

    // Update the display
    display.display();

    // Add a small delay to slow down the animation
    delay(10);
  }

  // Generate a random number between 5 and 7
  int screensaverTime = random(500, 800);

  // Loop for the screensaver time
  for (int i = 0; i < screensaverTime; i++) {
    drawPechkaScreensaver();

    // Add a small delay to slow down the animation
    delay(10);
  }
}
